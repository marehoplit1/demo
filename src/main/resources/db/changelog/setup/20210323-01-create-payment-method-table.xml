<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="mgudelj" id="create-payment-method-table">
        <createSequence
                incrementBy="1"
                schemaName="public"
                sequenceName="payment_method_seq_id"
                startValue="1" />

        <createTable tableName="payment_method">
            <column name="id" type="bigserial" valueSequenceNext="payment_method_seq_id">
                <constraints nullable="false" />
            </column>
            <column name="uuid" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="code" type="varchar(255)">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="created_date" type="dateTime" defaultValueDate="CURRENT_TIMESTAMP">
                <constraints nullable="false" />
            </column>
            <column name="modified_date" type="dateTime" defaultValueDate="CURRENT_TIMESTAMP">
                <constraints nullable="false" />
            </column>
            <column name="engine" type="varchar(255)">
                <constraints nullable="false" primaryKey="true"/>
            </column>

        </createTable>

        <createIndex tableName="payment_method" indexName="payment_method_uuid">
            <column name="uuid"></column>
        </createIndex>

        <rollback>
            <dropIndex tableName="payment_method" indexName="payment_method_uuid" />
            <dropSequence sequenceName="payment_method_seq_id" />
            <dropTable tableName="payment_method" />
        </rollback>
    </changeSet>
</databaseChangeLog>